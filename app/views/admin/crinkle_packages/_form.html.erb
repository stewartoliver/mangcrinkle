<%= form_with(model: [:admin, crinkle_package], class: "space-y-6") do |f| %>
  <% if crinkle_package.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(crinkle_package.errors.count, "error") %> prohibited this package from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% crinkle_package.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-4">
    <div class="form-group">
      <%= f.label :name, class: "form-label" %>
      <div class="mt-1">
        <%= f.text_field :name, class: "form-input" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "form-label" %>
      <div class="mt-1">
        <%= f.text_area :description, rows: 4, class: "form-textarea" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, class: "form-label" %>
      <div class="mt-1 relative rounded-md shadow-sm">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-orange-500 sm:text-sm">$</span>
        </div>
        <%= f.number_field :price, step: :any, class: "form-input pl-7 pr-12" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :quantity, class: "form-label" %>
      <div class="mt-1">
        <%= f.number_field :quantity, class: "form-input" %>
      </div>
    </div>

    <div class="relative flex items-start">
      <div class="flex items-center h-5">
        <%= f.check_box :active, class: "form-checkbox" %>
      </div>
      <div class="ml-3 text-sm">
        <%= f.label :active, class: "font-medium text-orange-700" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Cancel", admin_crinkle_packages_path, class: "admin-btn-secondary" %>
    <%= f.submit class: "admin-btn-primary" %>
  </div>
<% end %> 