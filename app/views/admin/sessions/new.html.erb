<h2 class="text-2xl font-bold text-orange-950 mb-6">Admin Sign In</h2>

<%= form_for :session, url: admin_login_path, html: { class: "space-y-6" } do |f| %>
  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="ml-3">
          <p class="text-sm text-red-700"><%= flash[:alert] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-orange-700" %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
    </div>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-orange-700" %>
    <div class="mt-1">
      <%= f.password_field :password, autocomplete: "current-password",
          class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
    </div>
  </div>

  <div>
    <%= f.submit "Sign in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-orange-200 bg-orange-950 hover:bg-orange-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= link_to "Back to Home", root_path, class: "text-orange-600 hover:text-orange-950" %>
</div> 