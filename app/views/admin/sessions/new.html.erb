<h2 class="text-2xl font-bold text-orange-950 mb-6">Admin Sign In</h2>

<%= form_tag admin_login_path, method: :post, class: "space-y-6" do %>
  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="ml-3">
          <p class="text-sm text-red-700"><%= flash[:alert] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= label_tag :email, "Email", class: "form-label" %>
    <div class="mt-1">
      <%= email_field_tag :email, nil, autofocus: true, autocomplete: "email", 
          class: "form-input" %>
    </div>
  </div>

  <div>
    <%= label_tag :password, "Password", class: "form-label" %>
    <div class="mt-1">
      <%= password_field_tag :password, nil, autocomplete: "current-password",
          class: "form-input" %>
    </div>
  </div>

  <div>
    <%= submit_tag "Sign in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-orange-200 bg-orange-950 hover:bg-orange-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
  </div>
<% end %> 