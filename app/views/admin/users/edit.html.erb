<% content_for :title, "Edit User - #{@user.display_name}" %>

<div class="bg-white shadow rounded-lg border border-orange-200">
  <div class="px-4 py-5 sm:px-6 border-b border-orange-200">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-lg leading-6 font-medium text-orange-950">Edit User</h3>
        <p class="mt-1 max-w-2xl text-sm text-orange-600">Update user information and contact details.</p>
      </div>
      <%= link_to "Back to Users", admin_users_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
    </div>
  </div>

  <div class="px-4 py-5 sm:p-6">
    <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were <%= pluralize(@user.errors.count, "error") %> with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="space-y-4">
          <h4 class="text-md font-medium text-orange-950">Basic Information</h4>
          
          <div>
            <%= form.label :email, "Email Address", class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.email_field :email, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :user_type, "User Type", class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.select :user_type, 
                  [['Customer', 'customer'], ['Admin', 'admin']], 
                  {}, 
                  class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <!-- Password Management Note -->
          <div class="bg-gray-50 border border-gray-200 rounded-md p-3">
            <div class="flex items-start">
              <div class="flex-shrink-0 pt-1">
                <svg class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-xs text-gray-600">Password changes are not available in this interface. Users can reset their passwords through the standard password reset process.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Customer Information -->
        <div class="customer-fields space-y-4">
          <h4 class="text-md font-medium text-orange-950">Customer Information</h4>
          
          <div>
            <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.text_field :first_name, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.text_field :last_name, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.telephone_field :phone, 
                  placeholder: "Phone number",
                  class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :address, "Address", class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.text_area :address, 
                  rows: 3, 
                  placeholder: "Address",
                  class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div class="flex items-center">
            <%= form.check_box :newsletter_subscribed, class: "h-4 w-4 text-orange-600 focus:ring-orange-500 border-orange-300 rounded" %>
            <%= form.label :newsletter_subscribed, "Subscribe to newsletter for updates and promotions", class: "ml-2 block text-sm text-orange-700" %>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-end space-x-3 pt-6 border-t border-orange-200">
        <%= link_to "Cancel", admin_user_path(@user), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
        <%= form.submit "Update User", class: "bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const userTypeSelect = document.querySelector('select[name="user[user_type]"]');
  const customerFields = document.querySelectorAll('.customer-fields');

  function toggleFields() {
    const isAdmin = userTypeSelect.value === 'admin';
    
    customerFields.forEach(field => {
      field.style.display = isAdmin ? 'none' : 'block';
    });
  }

  userTypeSelect.addEventListener('change', toggleFields);
  toggleFields(); // Initial state
});
</script> 