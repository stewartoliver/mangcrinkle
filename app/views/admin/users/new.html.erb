<% content_for :title, "New User" %>

<div class="admin-container">
  <div class="admin-container-header">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="admin-container-title">New User</h3>
        <p class="admin-container-subtitle">Create a new user account.</p>
      </div>
      <%= link_to "Back to Users", admin_users_path, class: "admin-btn-back" %>
    </div>
  </div>

  <div class="admin-container-content">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@user.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Basic Information -->
          <div class="space-y-4">
            <h4 class="text-md font-medium text-orange-950">Basic Information</h4>
            
            <div class="form-group">
              <%= form.label :email, class: "form-label" %>
              <div class="mt-1">
                <%= form.email_field :email, class: "form-input" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :user_type, class: "form-label" %>
              <div class="mt-1">
                <%= form.select :user_type, [['Customer', 'customer'], ['Admin', 'admin']], {}, 
                    class: "form-select",
                    data: { action: "change->user-form#toggleFields" } %>
              </div>
            </div>

            <div class="admin-fields" style="display: none;">
              <div class="form-group">
                <%= form.label :password, class: "form-label" %>
                <div class="mt-1">
                  <%= form.password_field :password, class: "form-input" %>
                </div>
              </div>
            </div>

            <div class="admin-fields" style="display: none;">
              <div class="form-group">
                <%= form.label :password_confirmation, class: "form-label" %>
                <div class="mt-1">
                  <%= form.password_field :password_confirmation, class: "form-input" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Customer Information -->
          <div class="customer-fields space-y-4">
            <h4 class="text-md font-medium text-orange-950">Customer Information</h4>
            
            <div class="form-group">
              <%= form.label :first_name, class: "form-label" %>
              <div class="mt-1">
                <%= form.text_field :first_name, class: "form-input" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :last_name, class: "form-label" %>
              <div class="mt-1">
                <%= form.text_field :last_name, class: "form-input" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :phone, class: "form-label" %>
              <div class="mt-1">
                <%= form.telephone_field :phone, class: "form-input" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :address, class: "form-label" %>
              <div class="mt-1">
                <%= form.text_area :address, rows: 3, class: "form-textarea" %>
              </div>
            </div>

            <div class="flex items-center">
              <%= form.check_box :newsletter_subscribed, class: "form-checkbox" %>
              <%= form.label :newsletter_subscribed, "Subscribe to newsletter", class: "ml-2 block text-sm text-orange-700" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3 pt-6 border-t border-orange-200">
          <%= link_to "Cancel", admin_users_path, class: "admin-btn-secondary" %>
          <%= form.submit "Create User", class: "admin-btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const userTypeSelect = document.querySelector('select[name="user[user_type]"]');
  const adminFields = document.querySelectorAll('.admin-fields');
  const customerFields = document.querySelectorAll('.customer-fields');

  function toggleFields() {
    const isAdmin = userTypeSelect.value === 'admin';
    
    adminFields.forEach(field => {
      field.style.display = isAdmin ? 'block' : 'none';
    });
    
    customerFields.forEach(field => {
      field.style.display = isAdmin ? 'none' : 'block';
    });
  }

  userTypeSelect.addEventListener('change', toggleFields);
  toggleFields(); // Initial state
});
</script> 