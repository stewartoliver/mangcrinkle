<% content_for :title, "New User" %>

<div class="bg-white shadow rounded-lg border border-orange-200">
  <div class="px-4 py-5 sm:px-6 border-b border-orange-200">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-lg leading-6 font-medium text-orange-950">New User</h3>
        <p class="mt-1 max-w-2xl text-sm text-orange-600">Create a new user account.</p>
      </div>
      <%= link_to "Back to Users", admin_users_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
    </div>
  </div>

  <div class="px-4 py-5 sm:p-6">
    <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were <%= pluralize(@user.errors.count, "error") %> with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="space-y-4">
          <h4 class="text-md font-medium text-orange-950">Basic Information</h4>
          
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.email_field :email, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :user_type, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.select :user_type, [['Customer', 'customer'], ['Admin', 'admin']], {}, 
                  class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm",
                  data: { action: "change->user-form#toggleFields" } %>
            </div>
          </div>

          <div class="admin-fields" style="display: none;">
            <%= form.label :password, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.password_field :password, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div class="admin-fields" style="display: none;">
            <%= form.label :password_confirmation, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.password_field :password_confirmation, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>
        </div>

        <!-- Customer Information -->
        <div class="customer-fields space-y-4">
          <h4 class="text-md font-medium text-orange-950">Customer Information</h4>
          
          <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.text_field :first_name, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.text_field :last_name, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :phone, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.telephone_field :phone, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div>
            <%= form.label :address, class: "block text-sm font-medium text-orange-700" %>
            <div class="mt-1">
              <%= form.text_area :address, rows: 3, class: "appearance-none block w-full px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
            </div>
          </div>

          <div class="flex items-center">
            <%= form.check_box :newsletter_subscribed, class: "h-4 w-4 text-orange-600 focus:ring-orange-500 border-orange-300 rounded" %>
            <%= form.label :newsletter_subscribed, "Subscribe to newsletter", class: "ml-2 block text-sm text-orange-700" %>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-3 pt-6 border-t border-orange-200">
        <%= link_to "Cancel", admin_users_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium" %>
        <%= form.submit "Create User", class: "bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const userTypeSelect = document.querySelector('select[name="user[user_type]"]');
  const adminFields = document.querySelectorAll('.admin-fields');
  const customerFields = document.querySelectorAll('.customer-fields');

  function toggleFields() {
    const isAdmin = userTypeSelect.value === 'admin';
    
    adminFields.forEach(field => {
      field.style.display = isAdmin ? 'block' : 'none';
    });
    
    customerFields.forEach(field => {
      field.style.display = isAdmin ? 'none' : 'block';
    });
  }

  userTypeSelect.addEventListener('change', toggleFields);
  toggleFields(); // Initial state
});
</script> 