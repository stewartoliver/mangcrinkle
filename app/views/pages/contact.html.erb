<!-- Contact Header -->
<div class="bg-orange-200 text-orange-950 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-center">Contact Us</h1>
    <p class="mt-4 text-xl text-center max-w-3xl mx-auto">
      Have questions about our delicious crinkles? We'd love to hear from you!
    </p>
  </div>
</div>

<!-- Contact Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Contact Information -->
    <div>
      <h2 class="text-2xl font-bold text-orange-950 mb-6">Get in Touch</h2>
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Email</h3>
          <p class="text-orange-700"><%= content_block_with_default('contact_email', 'info@mangcrinkle.com') %></p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Phone</h3>
          <p class="text-orange-700"><%= content_block_with_default('contact_phone', '(555) 123-4567') %></p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Address</h3>
          <div class="text-orange-700">
            <%= simple_format(content_block_with_default('contact_address', "123 Cookie Street\nSweet City, SC 12345")) %>
          </div>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Business Hours</h3>
          <div class="text-orange-700">
            <%= simple_format(content_block_with_default('business_hours', "Monday - Friday: 9:00 AM - 6:00 PM\nSaturday: 10:00 AM - 4:00 PM\nSunday: Closed")) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="bg-white rounded-lg shadow-md p-6 border border-orange-200">
      <h2 class="text-2xl font-bold text-orange-950 mb-6">Send us a Message</h2>
      
      <!-- Early Testing Notice -->
      <div class="mb-6 p-4 bg-orange-50 border border-orange-200 rounded-md">
        <div class="text-center">
          <div class="mb-2 text-lg text-orange-700 font-medium">
            ðŸš§ Early Testing Phase - Contact Form Currently Offline
          </div>
          <div class="text-sm text-orange-600 mb-4">
            We're keeping contact forms offline for now during testing. Please contact us directly using the information on the left!
          </div>
        </div>
      </div>
      
      <!-- Disabled Form -->
      <div class="space-y-6 opacity-50">
        <div>
          <label class="form-label">Name</label>
          <div class="mt-1">
            <input type="text" disabled class="form-input bg-gray-100 cursor-not-allowed" placeholder="Contact form disabled">
          </div>
        </div>

        <div>
          <label class="form-label">Email</label>
          <div class="mt-1">
            <input type="email" disabled class="form-input bg-gray-100 cursor-not-allowed" placeholder="Contact form disabled">
          </div>
        </div>

        <div>
          <label class="form-label">Subject</label>
          <div class="mt-1">
            <input type="text" disabled class="form-input bg-gray-100 cursor-not-allowed" placeholder="Contact form disabled">
          </div>
        </div>

        <div>
          <label class="form-label">Message</label>
          <div class="mt-1">
            <textarea rows="4" disabled class="form-textarea bg-gray-100 cursor-not-allowed" placeholder="Contact form disabled"></textarea>
          </div>
        </div>

        <button disabled class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-gray-400 bg-gray-200 cursor-not-allowed opacity-50">
          Send Message (Disabled)
        </button>
      </div>
    </div>
  </div>
</div> 