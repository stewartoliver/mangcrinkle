<!-- Contact Header -->
<div class="bg-orange-200 text-orange-950 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-center">Contact Us</h1>
    <p class="mt-4 text-xl text-center max-w-3xl mx-auto">
      Have questions about our delicious crinkles? We'd love to hear from you!
    </p>
  </div>
</div>

<!-- Contact Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Contact Information -->
    <div>
      <h2 class="text-2xl font-bold text-orange-950 mb-6">Get in Touch</h2>
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Email</h3>
          <p class="text-orange-700"><%= content_block_with_default('contact_email', 'info@mangcrinkle.com') %></p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Phone</h3>
          <p class="text-orange-700"><%= content_block_with_default('contact_phone', '(555) 123-4567') %></p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Address</h3>
          <div class="text-orange-700">
            <%= simple_format(content_block_with_default('contact_address', "123 Cookie Street\nSweet City, SC 12345")) %>
          </div>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Business Hours</h3>
          <div class="text-orange-700">
            <%= simple_format(content_block_with_default('business_hours', "Monday - Friday: 9:00 AM - 6:00 PM\nSaturday: 10:00 AM - 4:00 PM\nSunday: Closed")) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="bg-white rounded-lg shadow-md p-6 border border-orange-200">
      <h2 class="text-2xl font-bold text-orange-950 mb-6">Send us a Message</h2>
      <%= form_with url: contact_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :name, class: "form-label" %>
          <div class="mt-1">
            <%= f.text_field :name, class: "form-input" %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "form-label" %>
          <div class="mt-1">
            <%= f.email_field :email, class: "form-input" %>
          </div>
        </div>

        <div>
          <%= f.label :subject, class: "form-label" %>
          <div class="mt-1">
            <%= f.text_field :subject, class: "form-input" %>
          </div>
        </div>

        <div>
          <%= f.label :message, class: "form-label" %>
          <div class="mt-1">
            <%= f.text_area :message, rows: 4, class: "form-textarea" %>
          </div>
        </div>

        <%= f.submit "Send Message", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
      <% end %>
    </div>
  </div>
</div> 