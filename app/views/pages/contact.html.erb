<!-- Contact Header -->
<div class="customer-page-header">
  <div class="customer-page-header-container">
    <div class="customer-logo-container">
      <%= image_tag "Mang-logo.svg", alt: "MangCrinkle Logo", class: "h-20 w-auto" %>
    </div>
    <h1 class="customer-page-title company-name-font">Contact Us</h1>
    <p class="customer-page-subtitle">
      Have questions about our delicious crinkles? We'd love to hear from you!
    </p>
  </div>
</div>

<!-- Contact Content -->
<div class="customer-content-section">
  <div class="customer-container">
    <div class="customer-two-column">
      <!-- Contact Information -->
      <div>
        <h2 class="customer-feature-title mb-6">Get in Touch</h2>
        <div class="customer-section-spacing">
          <div>
            <h3 class="text-lg font-semibold text-orange-950 mb-2">Email</h3>
            <p class="customer-feature-description"><%= company_email %></p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-orange-950 mb-2">Phone</h3>
            <p class="customer-feature-description"><%= company_phone %></p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-orange-950 mb-2">Address</h3>
            <div class="customer-feature-description">
              <%= simple_format(company_address) %>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-orange-950 mb-2">Business Hours</h3>
            <div class="customer-feature-description">
              <%= simple_format(company_business_hours) %>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="customer-info-card">
        <h2 class="customer-feature-title mb-6">Send us a Message</h2>
        
        <%= form_with model: ContactMessage.new, url: contact_messages_path, local: true, class: "customer-section-spacing" do |form| %>
          <div>
            <%= form.label :name, "Name", class: "form-label" %>
            <div class="mt-1">
              <%= form.text_field :name, required: true, class: "form-input" %>
            </div>
          </div>

          <div>
            <%= form.label :email, "Email", class: "form-label" %>
            <div class="mt-1">
              <%= form.email_field :email, required: true, class: "form-input" %>
            </div>
          </div>

          <div>
            <%= form.label :subject, "Subject", class: "form-label" %>
            <div class="mt-1">
              <%= form.text_field :subject, required: true, class: "form-input" %>
            </div>
          </div>

          <%= form.hidden_field :priority, value: 'normal' %>

          <div>
            <%= form.label :message, "Message", class: "form-label" %>
            <div class="mt-1">
              <%= form.text_area :message, rows: 4, required: true, class: "form-textarea" %>
            </div>
          </div>

          <% if show_recaptcha? %>
            <div>
              <%= recaptcha_tags %>
            </div>
          <% end %>

          <div>
            <%= form.submit "Send Message", class: "form-btn-primary customer-transition" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 