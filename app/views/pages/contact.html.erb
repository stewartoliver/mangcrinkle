<!-- Contact Header -->
<div class="bg-orange-200 text-orange-950 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-center">Contact Us</h1>
    <p class="mt-4 text-xl text-center max-w-3xl mx-auto">
      Have questions about our delicious crinkles? We'd love to hear from you!
    </p>
  </div>
</div>

<!-- Contact Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Contact Information -->
    <div>
      <h2 class="text-2xl font-bold text-orange-950 mb-6">Get in Touch</h2>
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Email</h3>
          <p class="text-orange-700">info@mangcrinkle.com</p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Phone</h3>
          <p class="text-orange-700">(555) 123-4567</p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Address</h3>
          <p class="text-orange-700">
            123 Cookie Street<br>
            Sweet City, SC 12345
          </p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-orange-950 mb-2">Business Hours</h3>
          <p class="text-orange-700">
            Monday - Friday: 9:00 AM - 6:00 PM<br>
            Saturday: 10:00 AM - 4:00 PM<br>
            Sunday: Closed
          </p>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="bg-white rounded-lg shadow-md p-6 border border-orange-200">
      <h2 class="text-2xl font-bold text-orange-950 mb-6">Send us a Message</h2>
      <%= form_with url: contact_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-orange-950" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-orange-200 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-orange-950" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-orange-200 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
        </div>

        <div>
          <%= f.label :subject, class: "block text-sm font-medium text-orange-950" %>
          <%= f.text_field :subject, class: "mt-1 block w-full rounded-md border-orange-200 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
        </div>

        <div>
          <%= f.label :message, class: "block text-sm font-medium text-orange-950" %>
          <%= f.text_area :message, rows: 4, class: "mt-1 block w-full rounded-md border-orange-200 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
        </div>

        <%= f.submit "Send Message", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
      <% end %>
    </div>
  </div>
</div> 