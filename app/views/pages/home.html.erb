  </div>
</div>

<!-- Newsletter Section -->
<div class="bg-orange-200 text-orange-950">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
      <div>
        <h2 class="text-3xl font-extrabold tracking-tight sm:text-4xl">
          Stay Sweet & Informed
        </h2>
        <p class="mt-4 text-lg">
          Get the latest updates on new flavors, special offers, and behind-the-scenes stories from our kitchen.
        </p>
      </div>
      <div class="mt-8 lg:mt-0">
        <%= form_with url: newsletter_subscriptions_path, method: :post, local: true, class: "flex gap-3" do |form| %>
          <%= form.email_field :email, 
                placeholder: "Enter your email address", 
                required: true, 
                class: "form-input flex-1" %>
          <%= form.submit "Subscribe", 
                class: "px-8 py-3 bg-orange-950 text-orange-200 font-semibold rounded-md hover:bg-orange-900 transition duration-150" %>
        <% end %>
        <p class="text-sm text-orange-800 mt-2">We respect your privacy. Unsubscribe anytime.</p>
      </div>
    </div>
  </div>
</div>

