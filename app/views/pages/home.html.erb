<!-- Hero Section with Animated Falling Crinkles -->
<div class="hero-container relative text-orange-950" data-crinkle-image="<%= asset_path('crinkle.svg') %>">
  <!-- All crinkles will be generated here in JavaScript -->

  <!-- Hero Content -->
  <div class="hero-content relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <%= image_tag "Mang-logo.svg", alt: "MangCrinkle Logo", class: "h-48 w-auto sm:h-64 md:h-72 lg:h-96" %>
      </div>
      <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl transform hover:scale-105 transition-transform duration-300">
        Mang Crinkle Cookies
      </h1>
      <p class="mt-6 text-xl max-w-3xl mx-auto">
        Handcrafted Filipino-style crinkle cookies, baked with love and a touch of kilig! 🤎🇵🇭
      </p>
      <div class="mt-10 flex justify-center space-x-4">
        <%= link_to "Order Now", products_path, class: "inline-block bg-orange-950 text-orange-200 px-8 py-3 rounded-md font-semibold hover:bg-orange-900 transition duration-150 transform hover:scale-105" %>
        <%= link_to "Learn More", "#story", class: "inline-block border-2 border-orange-950 text-orange-950 px-8 py-3 rounded-md font-semibold hover:bg-orange-950 hover:text-orange-200 transition duration-150 transform hover:scale-105" %>
      </div>
    </div>
  </div>
</div>

<!-- Featured Products Section -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-orange-950 mb-4">Our Crinkles</h2>
    <p class="text-lg text-orange-700 max-w-3xl mx-auto">
      Handcrafted with love, each flavor tells a unique story of Filipino tradition and modern innovation.
    </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden border border-orange-200 hover:border-orange-500 transition duration-150">
        <% if product.image.present? %>
          <%= image_tag product.image, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="h-48 bg-orange-100"></div>
        <% end %>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2 text-orange-950"><%= product.name %></h3>
          <div class="flex justify-between items-center">
            <span class="text-lg font-bold text-orange-950">$<%= number_with_precision(product.price, precision: 2) %></span>
            <%= link_to "View Details", product_path(product), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Price List Section -->
  <div class="mt-16 bg-white rounded-lg shadow-md p-8 border border-orange-200">
    <h3 class="text-2xl font-bold text-orange-950 mb-6">Package Options</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% CrinklePackage.active.ordered_by_quantity.each do |package| %>
        <div class="text-center p-4 border border-orange-200 rounded-lg">
          <h4 class="text-xl font-semibold text-orange-950"><%= package.name %></h4>
          <p class="text-2xl font-bold text-orange-700 mt-2">$<%= number_with_precision(package.price, precision: 2) %></p>
          <p class="text-orange-600 mt-2"><%= package.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Story Section -->
<div class="bg-orange-50 py-16" id="story">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
      <div>
        <!-- Note: Add Mang's photo here -->
        <div class="h-96 bg-orange-100 rounded-lg border-2 border-orange-200"><%= image_tag "founder_img.jpg", class: "w-full h-full object-cover rounded-lg" %></div>
      </div>
      <div class="mt-8 lg:mt-0">
