<!-- Products Header -->
<div class="bg-orange-200 text-orange-950 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-center">Our Delicious Crinkles</h1>
    <p class="mt-4 text-xl text-center max-w-3xl mx-auto">
      Handcrafted with love, each flavor tells a unique story of Filipino tradition and modern innovation.
    </p>
  </div>
</div>

<!-- Package Options -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-orange-950 mb-4">Package Options</h2>
    <p class="text-lg text-orange-700 max-w-3xl mx-auto">
      Choose from our curated packages and select your favorite flavors. Mix and match to create your perfect combination.
    </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <% CrinklePackage.active.each do |package| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden border border-orange-200 hover:border-orange-500 transition duration-150">
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2 text-orange-950"><%= package.name %></h3>
          <p class="text-orange-700 mb-4"><%= package.description %></p>
          <div class="flex justify-between items-center">
            <span class="text-lg font-bold text-orange-950">$<%= number_with_precision(package.price, precision: 2) %></span>
            <button data-package-modal-package-id-param="<%= package.id %>"
                    data-package-modal-package-limit-param="<%= package.quantity %>"
                    data-package-modal-products-param='<%= raw Product.active.map { |p| { id: p.id, name: p.name, image_url: p.image.attached? ? rails_blob_url(p.image) : nil } }.to_json %>'
                    class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
              Select Package
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Individual Products by Category -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-orange-950 mb-4">Individual Products</h2>
    <p class="text-lg text-orange-700 max-w-3xl mx-auto">
      Prefer to choose individual items? Select from our full range of delicious products organized by category.
    </p>
  </div>

  <!-- Crinkles Section -->
  <% crinkles = @products.crinkles %>
  <% if crinkles.any? %>
    <div class="mb-16">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-orange-950 mb-2">Crinkles</h3>
        <p class="text-orange-700">Our signature handcrafted cookies in various delicious flavors.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% crinkles.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden border border-orange-200 hover:border-orange-500 transition duration-150">
            <% if product.image.present? %>
              <%= image_tag product.image, class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="h-48 bg-orange-100"></div>
            <% end %>
            
            <div class="p-6">
              <h4 class="text-xl font-semibold mb-2 text-orange-950"><%= product.name %></h4>
              <p class="text-orange-700 mb-4"><%= truncate(product.description, length: 100) %></p>
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-orange-950">$<%= number_with_precision(product.price, precision: 2) %></span>
                <div class="flex space-x-2">
                  <%= form_with url: add_product_cart_path, method: :post, class: "flex items-center space-x-2", data: { turbo: false } do |f| %>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.number_field :quantity, value: 1, min: 1, class: "appearance-none block w-16 px-3 py-2 border border-orange-300 rounded-md shadow-sm placeholder-orange-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
                    <%= f.submit "Add to Cart", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Extras Section -->
  <% extras = @products.extras %>
  <% if extras.any? %>
    <div class="mb-16">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-green-950 mb-2">Extras</h3>
        <p class="text-green-700">Additional treats and accompaniments to complement your crinkles.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% extras.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden border border-green-200 hover:border-green-500 transition duration-150">
            <% if product.image.present? %>
              <%= image_tag product.image, class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="h-48 bg-green-100"></div>
            <% end %>
            
            <div class="p-6">
              <h4 class="text-xl font-semibold mb-2 text-green-950"><%= product.name %></h4>
              <p class="text-green-700 mb-4"><%= truncate(product.description, length: 100) %></p>
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-green-950">$<%= number_with_precision(product.price, precision: 2) %></span>
                <div class="flex space-x-2">
                  <%= form_with url: add_product_cart_path, method: :post, class: "flex items-center space-x-2", data: { turbo: false } do |f| %>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.number_field :quantity, value: 1, min: 1, class: "appearance-none block w-16 px-3 py-2 border border-green-300 rounded-md shadow-sm placeholder-green-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
                    <%= f.submit "Add to Cart", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Merch Section -->
  <% merch = @products.merch %>
  <% if merch.any? %>
    <div class="mb-16">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-blue-950 mb-2">Merchandise</h3>
        <p class="text-blue-700">Show your love for crinkles with our branded merchandise.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% merch.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden border border-blue-200 hover:border-blue-500 transition duration-150">
            <% if product.image.present? %>
              <%= image_tag product.image, class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="h-48 bg-blue-100"></div>
            <% end %>
            
            <div class="p-6">
              <h4 class="text-xl font-semibold mb-2 text-blue-950"><%= product.name %></h4>
              <p class="text-blue-700 mb-4"><%= truncate(product.description, length: 100) %></p>
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-blue-950">$<%= number_with_precision(product.price, precision: 2) %></span>
                <div class="flex space-x-2">
                  <%= form_with url: add_product_cart_path, method: :post, class: "flex items-center space-x-2", data: { turbo: false } do |f| %>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.number_field :quantity, value: 1, min: 1, class: "appearance-none block w-16 px-3 py-2 border border-blue-300 rounded-md shadow-sm placeholder-blue-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                    <%= f.submit "Add to Cart", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'shared/package_selection_modal' %> 